<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ko.sigma.rest.role.repository.RoleRepository">

    <resultMap id="BaseRoleResultMap" type="org.ko.sigma.data.entity.Role">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="disable" property="disable" jdbcType="SMALLINT"/>
        <result column="version" property="version" jdbcType="BIGINT"/>
        <result column="create_user" property="createUser" jdbcType="BIGINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="modified_user" property="modifiedUser" jdbcType="BIGINT"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="BaseRoleMenuResultMap" type="org.ko.sigma.data.entity.RoleMenu">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="menu_id" property="menuId" jdbcType="BIGINT"/>
        <result column="disable" property="disable" jdbcType="SMALLINT"/>
        <result column="version" property="version" jdbcType="BIGINT"/>
        <result column="create_user" property="createUser" jdbcType="BIGINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="modified_user" property="modifiedUser" jdbcType="BIGINT"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <resultMap id="ResultMapWithRoleMenu" 
               type="org.ko.sigma.rest.role.dto.RoleMenuDTO"
               extends="BaseRoleMenuResultMap">
        <association property="role"
                     resultMap="BaseRoleResultMap"
                     javaType="org.ko.sigma.data.entity.Role"/>
        <!--<collection property="menus"
                    javaType="java.lang.List"
                    ofType="org.ko.prototype.rest.menu.dto.MenuDTO"
                    resultMap=""
                    column="role_id"
                    select=""/>-->
    </resultMap>
    

</mapper>