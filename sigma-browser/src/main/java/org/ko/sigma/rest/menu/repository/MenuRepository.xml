<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ko.sigma.rest.menu.repository.MenuRepository">

    <resultMap id="BaseMenuResultMap" type="org.ko.sigma.data.entity.Menu">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="path" property="path" jdbcType="VARCHAR"/>
        <result column="component" property="component" jdbcType="VARCHAR"/>
        <result column="redirect" property="redirect" jdbcType="VARCHAR"/>
        <result column="meta" property="meta" jdbcType="VARCHAR"/>
        <result column="parent_code" property="parentId" jdbcType="VARCHAR"/>
        <result column="enable" property="enable" jdbcType="SMALLINT"/>
        <result column="version" property="version" jdbcType="BIGINT"/>
        <result column="create_user" property="createUser" jdbcType="VARCHAR"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="modified_user" property="modifiedUser" jdbcType="VARCHAR"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="ResultMapWithChildMenu"
               type="org.ko.sigma.rest.menu.dto.MenuDTO"
               extends="BaseMenuResultMap">
        <collection property="children"
                    javaType="java.util.List"
                    ofType="org.ko.sigma.rest.menu.dto.MenuDTO"
                    column="code"
                    select="queryMenuByParentId"/>
    </resultMap>

    <select id="queryMenuList" resultMap="ResultMapWithChildMenu">
        SELECT
            id,
            code,
            name,
            path,
            component,
            redirect,
            meta,
            parent_code,
            enable,
            version,
            create_user,
            create_date,
            update_user,
            update_date
        FROM t_menu
        WHERE enable = 1
            AND parent_id = '#'
    </select>

    <select id="queryMenuByParentId" resultMap="ResultMapWithChildMenu" parameterType="java.lang.Long">
        SELECT
            id,
            code,
            name,
            path,
            component,
            redirect,
            meta,
            parent_code,
            enable,
            version,
            create_user,
            create_date,
            update_user,
            update_date
        FROM t_menu
        WHERE enable = 1
            AND parent_id = #{id}
    </select>

    <select id="queryMenuByRoleId" resultMap="ResultMapWithChildMenu" parameterType="java.lang.Long">
        SELECT
            m.id,
            m.code,
            m.name,
            m.path,
            m.component,
            m.redirect,
            m.meta,
            m.parent_code,
            m.enable,
            m.version,
            m.create_user,
            m.create_date,
            m.update_user,
            m.update_date
        FROM t_role_menu rm
        LEFT JOIN t_menu m ON rm.menu_id = m.id AND m.enable = 1
        WHERE rm.enable = 1 AND rm.role_id = #{roleId}
    </select>

</mapper>