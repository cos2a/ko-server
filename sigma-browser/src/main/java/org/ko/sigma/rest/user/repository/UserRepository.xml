<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ko.sigma.rest.user.repository.UserRepository">

    <select id="queryUserList" resultType="org.ko.sigma.rest.user.dto.UserDTO">
        select * from t_user
    </select>


    <select id="loadUserByUsername" resultType="org.ko.sigma.rest.user.dto.UserDTO" parameterType="string">
        SELECT * FROM t_user t WHERE t.username = #{username} AND t.disable = 0;
    </select>
</mapper>